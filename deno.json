{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window"
        ],
        "strict": true
    },
    "lint": {
        "files": {
            "include": [
                "src/**/*",
                "main.ts"
            ],
            "exclude": [
                "src/testdata/"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "ban-untagged-todo"
            ],
            "exclude": [
                "no-unused-vars"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "src/**/*"
            ],
            "exclude": [
                "src/testdata/"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 120,
            "indentWidth": 2,
            "singleQuote": false,
            "proseWrap": "preserve"
        }
    }
}